{
	"easycom": {
			"^u-(.*)": "uview-ui/components/u-$1/u-$1.vue"
		},
	// 第一项为应用入口页
	// 新增/减少页面都需要在pages中进行配置
	"pages": [
		{
			"path":"pages/index/index",
			"style":{
				"navigationStyle":"custom" //去掉顶部导航栏
			}
			
		},
		{
			"path":"pages/exam/exam",
			"style":{
				"navigationStyle":"custom" //去掉顶部导航栏
			}
			
		},
		{
			"path":"pages/my/my",
			"style":{
				"navigationStyle":"custom" //去掉顶部导航栏
			}
			
		},
		
		{
			"path":"pages/login/login",
			"style":{
				"navigationStyle":"custom" //去掉顶部导航栏
			}
			
		},
		{
		    "path" : "pages/study-info/study-info",
		    "style" :                                                                                    
		    {
		        "navigationBarTitleText": "",
		        "enablePullDownRefresh": false,
				"navigationStyle":"custom"
		    }
		    
		},
		{
			"path":"pages/study/study",
			"style": {
				"navigationStyle": "custom",
				"enablePullDownRefresh": true
			}
		},
		{
		    "path" : "pages/exam/pratice_index/pratice_index",
			"style" :
			{
			    "navigationBarTitleText": "",
			    "enablePullDownRefresh": false,
				"navigationStyle": "custom"
			}
		},
		{
		    "path" : "pages/exam/pratice/pratice",
		    "style" :                                                                                    
		    {
		        "navigationBarTitleText": "大学生考试题库",
				"navigationBarBackgroundColor":	"#FF4848",
				"navigationBarTextStyle":"white"
			}
		}
		
        
    ],
	"globalStyle": {
		"navigationBarTextStyle": "black",
		"navigationBarBackgroundColor": "#F8F8F8",
		"backgroundColor": "#F8F8F8"
	},
	// 底部导航栏
	"tabBar": {
	    "color": "#7A7E83",
	    "selectedColor": "#7A7E83",
	    "borderStyle": "white",
	    "backgroundColor": "#ffffff",
		"height": "140rpx",
	    "list": [
			{
				"pagePath": "pages/index/index",
				"iconPath": "static/tabbar/home.png",
				"selectedIconPath": "static/tabbar/home-filling.png",
				"text": "首页" 
			}, 
			{
				"pagePath": "pages/exam/exam",
				"iconPath": "static/tabbar/exam.png",
				"selectedIconPath": "static/tabbar/exam-filling.png",
				"text": "练习"
			}
			,
			{
				"pagePath": "pages/my/my",
				"iconPath": "static/tabbar/my.png",
				"selectedIconPath": "static/tabbar/my-filling.png",
				"text": "我的"
			}
		]
	}
}
